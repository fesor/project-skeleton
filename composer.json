{
    "name": "fesor/project-template",
    "license": "MIT",
    "type": "project",
    "description": "Basic API project template",
    "autoload": {
        "psr-4": { "App\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {"Tests\\": "tests"}
    },
    "require": {
        "php": "^7.1.3",
        "ext-iconv": "*",
        "symfony/console": "^4.0",
        "symfony/debug-bundle": "^4.0",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/lts": "^4@dev",
        "symfony/monolog-bundle": "^3.1",
        "symfony/orm-pack": "^1.0",
        "symfony/profiler-pack": "^1.0",
        "symfony/serializer-pack": "^1.0",
        "symfony/yaml": "^4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~2.0",
        "phpunit/phpunit": "^5.6",
        "symfony/phpunit-bridge": "^3.0",
        "fzaninotto/faker": "^1.7",
        "symfony/dotenv": "^4.0"
    },
    "replace": {
        "symfony/polyfill-apcu": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "start": [
            "composer install",
            "docker-compose up -d",
            "docker-compose run --rm php bin/wait_for_db",
            "docker/shortcuts/console doctr:migration:migrate -n --allow-no-migration",
            "docker/shortcuts/console doctrine:fixtures:load -n --fixtures tests/Fixtures/ORM"
        ],
        "prepare-project": [
            "ln -sf `pwd`/docker/scripts/hooks/pre-commit .git/hooks/pre-commit"
        ],
        "post-install-cmd": [
            "@prepare-project"
        ],
        "post-update-cmd": [
            "@prepare-project"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "config": {
        "bin-dir": "bin",
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
